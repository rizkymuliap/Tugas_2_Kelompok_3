@model Tugas_2_Kelompok_3.Models.Peralatan
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Tambah Peralatan";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Peralatan</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Peralatan" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="nama_peralatan" class="control-label">Nama Peralatan</label>
                                <input asp-for="nama_peralatan" class="form-control" name="nama_jenis_peralatan" />
                                <span asp-validation-for="nama_peralatan" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Id_jenis" class="control-label">Deskripsi</label>
                                <input asp-for="Id_jenis" class="form-control" name="Id_jenis" />
                                <span asp-validation-for="Id_jenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="deskripsi_peralatan" class="control-label">Deskripsi</label>
                                <input asp-for="deskripsi_peralatan" class="form-control" name="deskripsi_peralatan" />
                                <span asp-validation-for="deskripsi_peralatan" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Harga_Beli" class="control-label">Harga Beli</label>
                                <input asp-for="Harga_Beli" class="form-control" name="Harga_Beli" />
                                <span asp-validation-for="Harga_Beli" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="stok" class="control-label">stok</label>
                                <input asp-for="stok" class="form-control" name="stok" />
                                <span asp-validation-for="stok" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

